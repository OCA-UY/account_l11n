<?xml version="1.0"?>
<odoo>
  <record model="report.paperformat" id="preprint_paperformat_a4">
    <field name="name">A4 preprint</field>
    <field name="margin_left">3</field>
    <field name="page_height">0</field>
    <field name="page_width">0</field>
    <field name="format">A4</field>
    <field name="margin_top">5</field>
    <field name="margin_right">3</field>
    <field name="margin_bottom">3</field>
    <field name="header_line">False</field>
    <field name="header_spacing">35</field>
    <field name="dpi">90</field>
    <field name="orientation">Portrait</field>
  </record>
  <template id="report_preprint_invoice_document">
		<t t-name="oca_uy_preprint_invoices.report_preprint_invoice_document">
				<t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
				<div class="page" style="font-size:13px;">
				  <div class="mitad-preimpreso" t-foreach="['via cliente','copia archivo']" t-as="nada" style="display:inline-block;width:50%;border: 1px solid black; padding:0cm;">
				   
					<div>
					  <span style="position: relative; top: 2.52cm; right: 1.2cm;" class="pull-right text-right">CONTADO</span><br/>
					  <span style="position: relative; top: 2.45cm; right: 1.21cm;" class="pull-right text-right" t-raw="o.number[-5:]"/><br/>
					  <span style="position: relative; top: 2.8cm; right: 1.38cm; word-spacing: 16px; white-space: nowrap;" class="pull-right text-right" t-field="o.date_invoice" t-field-options="{'format':'dd MM yyyy'}"/><br/>
					  <p style="position: relative; top: 3.6cm; right: 1.35cm; word-spacing: 60px;" class="pull-right"><span t-if='o.partner_id.vat' t-raw="o.partner_id.vat[2:]"/> <span t-raw="'NO' if o.partner_id.vat else 'SI'"/></p><br/>
					  <span style="position: relative; top: 4.45cm; left: 2.3cm;" t-field="o.partner_id.name"/><br/>
					  <span style="position: relative; top: 5.2cm; left: 2.47cm;" t-if="o.partner_id.street" t-raw="o.partner_id.street + (' ' + o.partner_id.street2 if o.partner_id.street2 else '') + (', ' + o.partner_id.city if o.partner_id.city else '') + (' ' + o.partner_id.zip if o.partner_id.zip else '')"/><br/>
					</div>


					 <div style="height: 20cm; position: relative; top: 6.65cm;">
					   <table style="margin-left: 1.1cm;">
							<t t-foreach="o.invoice_line_ids" t-as="l">
							   <tr class="row">
								 <td width="10px" >
								   <span t-raw="int(l.quantity)"/>
								 </td>
								 <td width="237px" style="white-space: nowrap">
								   <span t-field="l.name"/>
								 </td>
								 <td width="25px">
								   <span t-field="l.price_unit"/>
								 </td>
								 <td width='25px' style="padding-left: 33px;">
								   <span t-field="l.price_subtotal" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
								 </td>
								 <td width='25px' style="padding-left: 23px;">
								   E
								 </td>   
							   </tr>
							</t>
					   </table>
					</div>
					
					<div class='oe_structure container'>
						<div class="row">
							<div class="col-xs-4">
								<span style="white-space: nowrap;">Red de cobranzas</span>
								Abitab
							</div>
							<div class="col-xs-8">
								<table>
									<tr>
										<td><span t-field="o.amount_untaxed" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
									</tr>
									<t t-foreach="o._get_tax_amount_by_tax()" t-as="amount_by_tax">
									  <tr style="">
										<td class="text-right">
										  <span t-esc="amount_by_tax[0]"/>
										</td>
										<td class="text-right">
										  <span t-esc="amount_by_tax[1]"/>
										</td>
									  </tr>
									</t>
									<tr>
										<td><span t-field="o.amount_total" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
									</tr>
								</table>
							</div>
						</div>
					</div>
				  
				</div>
			</div> 
		</t>
  </template>
  <template id="report_invoices">
    <t t-call="report.html_container">
      <t t-foreach="docs" t-as="o">
        <t t-call="oca_uy_preprint_invoices.report_preprint_invoice_document" t-lang="o.partner_id.lang"/>
      </t>
    </t>
  </template>
  <report id="invoice_preprints" model="account.invoice" string="Preimpreso" report_type="qweb-pdf" name="oca_uy_preprint_invoices.report_invoices" file="oca_uy_preprint_invoices.preprint_invoice" attachment_use="True" attachment="(object.state in ('open','paid')) and ('INV'+(object.number or '').replace('/','')+'.pdf')" paperformat="preprint_paperformat_a4"/>
</odoo>
